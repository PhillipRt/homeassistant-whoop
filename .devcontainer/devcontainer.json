{
  "image": "homeassistant/home-assistant:dev",
  "forwardPorts": [8123],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  
  "workspaceMount": "source=${localWorkspaceFolder}/custom_components,target=/config/custom_components,type=bind,consistency=cached",
  "postCreateCommand": [
    "cp ${localWorkspaceFolder}/configuration.yaml /config/configuration.yaml",
    "echo 'Custom component mounted and Home Assistant Core running'"
  ]
}
